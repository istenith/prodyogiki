
.topic
	.heading
		span Register Now!
.card-holder
	each event in eventList
		.card
			.inner
				.front
					h3= event.title
					center
						// if event.dontInline
						img(src='../assets/img/' + event.image)
						// else
							img(inline src='../assets/img/' + event.image)
				.back
					p= event.descr
					.downloadabs
					center
						br
						// path according to dist assumin documents in root of dist
						a(class="abstract" href='documents/' + event.abstract download) Abstract &nbsp&nbsp&nbsp|&nbsp&nbsp&nbsp   
							img(src="../assets/img/download.svg", alt="")
