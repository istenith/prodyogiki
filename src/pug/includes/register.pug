h1 Register Yourself
form(class="holder" method="POST" action="https://backend.istenith.com/regPlayer")
	.regPlayer
		.textbox
			input(type="text" id="player_name" name="name" required )
			lable Name
		
		.textbox
			input(type="input" id="phone" name="phone" required )
			lable Phone Number

		
		.textbox
			input(type="email" id="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required )
			lable Email
		
		
		.textbox
			input(type="password" id="password" name="pw" required )
			lable Password

		
		.textbox
			input(type="password" id="conf_password" name="confpw" required )
			lable Confirm Password

		lable#message Passwords don't match

		.submit
			input(type="submit" value="SUBMIT")

h2 Already Registered?

.formselect
	.active#make Make Team
	.inactive#join Join Team 


form(class="holder" id="regTeam" method="POST" action="https://backend.istenith.com/regTeam")
	.regTeam
		
		.textbox
			input(type="text" id="team_name" required name="team_name" )
			lable Team Name
		
		.textbox.team_leader
			input(type="text" id="team_leader_email" required name="team_leader_email" )
			lable#teamLeader Team Leader Email
		
		.textbox.team_leader
			input(type="password" id="team_leader_password" name="leader_pw" required )
			lable#teamLeader Team Leader Password
	   
		lable#event Event
		- var limit
		.textbox#select
			select(id="selectelement" name="event")
				each event in eventList
					- limit = event.team_limit
					option(value = event.title name=event.title id=event.team_limit)=event.title 
		lable Team Members
		#limit_lable
		input(type="hidden" id="team_limit" name="team_limit")
	

		.submit
			input(type="submit" value="SUBMIT")


form(class="holder" id="joinTeam" method="POST" action="https://backend.istenith.com/joinTeam")
	.joinTeam
		
