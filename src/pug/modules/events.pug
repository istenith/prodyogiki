	var eventList = [
		{
			'title': 'Crazy Crawler',
			'image': 'resources/img/cc.svg',
			'descr': 'Build a legged bot (crawler) that can move in a straight line to dash through a track in minimum time',
			'pdf': 'resources/pdfs/cc.pdf'
		},
		{
			'title': 'Molecular Mystery',
			'image': 'resources/img/mm.svg',
			'descr': 'A treasure hunt which has questions related to all topics which have to be answered by teams of 4. Solutions are all around the campus.'
		},
		{
			'title': 'Compact Condo',
			'image': 'resources/img/ccondo.svg',
			'descr': 'Design a tiny house with different features in a defined area. You can use any means for designing.'
		},
		{
			'title': 'Risk Reduction',
			'image': 'resources/img/rr.svg',
			'descr': 'Buy virtual assets to ideate a solution to protect against virtual perils and calamities.'
		},
		{
			'title': 'Lost Lander',
			'image': 'resources/img/ll.svg',
			'descr': 'Build a bot which can sense obstacles in an obstacle course and clear that obstacle course in minimum time. The course cannot be seen by the operator.'
		},
		{
			'title': 'Goofy Gizmos',
			'image': 'resources/img/gg.svg',
			'descr': 'You will be provided various materials from which you have to make a complex contraption to achieve a simple goal.'
		},
		{
			'title': 'Humpty Dumpty',
			'image': 'resources/img/ee.svg',
			'descr': "'Humpty Dumpty' sat on a wall, 'Humpty Dumpty' had a great fall!. Save Mr. Humpty Dumpty from falling and exploding by covering with various materials."
		},
		{
			'title': 'Dev Dash',
			'image': 'resources/img/dd.svg',
			'descr': 'There are 2 rounds in this code marathon. A short code competition followed by code relay event. Solo event for all the enthusiastic coders'
		}
	]

.band Tap to Flip

.card-holder
	each event in eventList
		.card
			.inner
				.front
					h3= event.title
					center
						img(src=event.image)
				.back
					p= event.descr

script.
	let events_band = document.querrySelector('#events .band');
	let events_tab = document.querrySelector('.tab');
	events_tab.addEventListener('click', (eve) => {
		events_band.style.transform = 'translateX(0)';
		events_band.classList.add('active');
	});
